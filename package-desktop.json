
{
  "name": "sistema-aih-desktop",
  "version": "1.0.0",
  "description": "Sistema de Controle de Auditoria de AIH - Vers√£o Desktop",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.empresa.sistema-aih",
    "productName": "Sistema AIH",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "server-desktop.js",
      "auth.js",
      "database.js",
      "middleware.js",
      "monitor.js",
      "cleanup.js",
      "public/**/*",
      "node_modules/**/*",
      "db/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "author": "Gustavo Cambraia",
  "license": "MIT"
}
